<?xml version="1.0" encoding="ASCII"?>
<tosca:TopologyTemplate xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:tosca="http://tosca/1.0" tosca_definitions_version="cloudify_dsl_1_1">
  <imports file="http://www.getcloudify.org/spec/cloudify/3.3.1/types.yaml"/>
  <imports file="https://raw.githubusercontent.com/dice-project/DICE-FCO-Plugin-Cloudify/develop/plugin.yaml"/>
  <imports file="http://www.getcloudify.org/spec/chef-plugin/1.3.1/plugin.yaml"/>
  <imports file="http://dice-project.github.io/DICE-Deployment-Cloudify/spec/fco/master/plugin.yaml"/>
  <nodeTemplates node_template_name="vmq" type="dice.hosts.small">
    <instances deploy="1"/>
  </nodeTemplates>
  <nodeTemplates node_template_name="zookeeper_vmq_server" type="dice.components.zookeeper.Server">
    <properties property_name="tickTime" value="1500"/>
    <properties property_name="initLimit" value="10"/>
    <properties property_name="syncLimit" value="5"/>
    <relationships type="dice.relationships.ContainedIn" target="vmq"/>
    <relationships type="dice.relationships.zookeeper.MemberOfQuorum" target="zookeeper_quorum"/>
  </nodeTemplates>
  <nodeTemplates node_template_name="zookeeper_quorum" type="dice.components.zookeeper.Quorum">
    <relationships type="dice.relationships.zookeeper.QuorumContains" target="vmq"/>
  </nodeTemplates>
</tosca:TopologyTemplate>
